<!DOCTYPE html>
<html>
  <head>
    <% include ./header %>
  </head>
  <body>
    <% include ./navigation-logged-out %>

    <div class="center-section row">
      <div class="offset-md-2 col-md-2 flex-center">
        <h1>Registration</h1>
      </div>
      <div class="col-md-6 flex-center">
        <form class="authentication-box" id="register">
          <div class="form-group">
            <span class="fa fa-user-circle-o mr-2"></span>
            <label for="username">Username</label>
            <input type="text" class="form-control" id="username">
          </div>
          <div class="form-group">
            <span class="fa fa-envelope mr-2"></span>
            <label for="email">Email</label>
            <input type="email" class="form-control" id="email">
          </div>
          <div class="form-group">
            <span class="fa fa-lock mr-2"></span>
            <label for="password">Password</label>
            <input type="password" class="form-control" id="password">
          </div>
          <div class="form-group">
            <span class="fa fa-lock mr-2"></span>
            <label for="confirm-password">Confirm Password</label>
            <input type="password" class="form-control" id="confirm-password">
          </div>
          <button class="btn btn-1 float-right" type="submit" id="register-button">Register</button>
        </form>
      </div>
    </div>
  </body>
  <footer>
    <% include ./footer %>
    <script src="javascripts/register.js"></script>
  </footer>
</html>
